<mvc:View
    controllerName="zmmo071101.controller.MainView"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns="sap.m"
	xmlns:l="sap.ui.layout"
	xmlns:f="sap.ui.layout.form"
>
	<Shell id="shell">
		<App id="app">
			<pages>
				<Page id="page" title="{i18n>title}"
                      showNavButton="{= !!(${fragment>/activeFragment} === 'ScannedList' ||
                                        ${fragment>/activeFragment} === 'Component')}"
                      navButtonPress="onBack">
					<content>
						<VBox	id="contentVBox"/>
						<l:VerticalLayout	id="messageStripArea"
											class="sapUiContentPadding"
											width="100%"/>
					</content>
					<footer>
						<OverflowToolbar>
							<content>
								<Button
									id="messagePopOverButton"
									icon="sap-icon://message-popup"
									type="Emphasized"
									text="{=${messages>/}.length}"
									visible="{=!!${messages>/}.length}"
									press="onMessagePopover"/>
								<ToolbarSpacer/>
								<Button
									text="{i18n>cancel}"
									type="Reject"
									visible="{= ${fragment>/activeFragment} === 'Init' ||
                                                ${fragment>/activeFragment} === 'ScannedList'}"
									press="onCancel"/>
								<Button
									text="{i18n>next}"
									type="Emphasized"
									visible="{= ${fragment>/activeFragment} === 'Init'}"
									press="onNext"/>
								<Button
									text="{i18n>nextItem}"
									type="Emphasized"
									visible="{= ${fragment>/activeFragment} === 'Component'}"
									press="onNextItem"/>
								<Button
									text="{i18n>save}"
									type="Accept"
									visible="{= ${fragment>/activeFragment} === 'Init'
											&amp;&amp;!!${scannedData>/OrderCount}}"
									press="onSave"/>
							</content>
						</OverflowToolbar>
					</footer>
				</Page>
			</pages>
		</App>
	</Shell>
</mvc:View>
